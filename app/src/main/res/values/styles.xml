    <style name="btnClose">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">25dp</item>
        <item name = "android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/ic_close</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="btnInRegister">
        <item name="android:background">@drawable/custom_button_in_register</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/gray_ccc</item>
    </style>

    <style name="edtOTP">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="btnGetOTP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_button_otp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/get_otp</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtVerifyOTP">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/otp_verification</item>
    </style>

    <style name="belowTxtVerifyOTP">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customBottomNavigation">
        <item name="itemIconTint">@color/blue_light</item>
        <item name="itemTextColor">@color/blue_light</item>
    </style>

</resources>